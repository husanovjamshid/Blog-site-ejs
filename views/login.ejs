<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<!-- <link rel="icon" href="'./img/favicon.ico" /> -->
		<title>NT News</title>
		<!-- <link rel="stylesheet" href="./css/style.css" /> -->
		<!-- Font Awesome -->
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
			rel="stylesheet"
		/>
		<!-- Google Fonts -->
		<link
			href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
			rel="stylesheet"
		/>
		<!-- MDB -->
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.css"
			rel="stylesheet"
		/>
		<style>
			header {
				background-color: #f1f0ee;
				padding: 17px 0;
			}

			a {
				text-decoration: none !important;
			}

			.header__inner {
				display: flex;
				justify-content: space-between;
				align-items: center;
			}

			.header__list {
				display: flex;
				margin: 0;
				padding: 0;
				align-items: center;
				justify-content: space-between;
				list-style: none;
			}

			.header__link {
				font-weight: 500;
				line-height: 22px;
				text-decoration: none;
				color: #000;
				/* font-size: 18px; */
			}

			.header__item {
				margin-right: 35px;
			}

			@media only screen and (max-width: 992px) {
				.header__item {
					display: none;
				}
			}

			.header__btn {
				min-width: 140px;
				text-align: center;
				padding: 9px 12px;
				border-radius: 100px;
				background-color: #fff;
				border: 1px solid transparent;
				cursor: pointer;
			}

			.blog-article__date,
			.blog-article__view-count {
				display: flex;
				align-items: center;
			}
			.blog-article__date {
				justify-content: space-between;
				font-weight: 500;
				font-size: 14px;
				line-height: 17px;
				letter-spacing: -0.02em;
				color: rgba(0, 0, 0, 0.35);
				/* margin-top: 20px; */
				margin-bottom: 14px;
			}

			.blog-article__view-count {
				display: flex;
				align-items: center;
			}

			.blog-article__view-count:before {
				content: '';
				width: 16px;
				height: 16px;
				display: block;
				background-image: url('https://najottalim.uz/_next/static/media/icon-eye.7599250f.svg');
				background-repeat: no-repeat;
				background-size: contain;
				margin-right: 6px;
			}

			.card {
				cursor: pointer;
				transition: all 0.4s ease;
				min-height: 222px !important;
				box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px !important;
			}

			.card:hover {
				box-shadow: 0 2px 16px 3px rgba(0, 0, 0, 0.1) !important;
				border-radius: 12px;
			}

			.card-title {
				overflow: hidden !important;
				display: -webkit-box !important;
				-webkit-box-orient: vertical !important;
				padding-top: 10px;
				font-weight: 700;
				font-size: 18px;
				-webkit-line-clamp: 2;
				margin: 0 0 14px;
				color: #000;
			}

			.card-text {
				overflow: hidden !important;
				display: -webkit-box !important;
				-webkit-box-orient: vertical !important;
				max-width: 336px;
				font-weight: 500;
				font-size: 14px;
				line-height: 22px;
				-webkit-line-clamp: 3;
				color: rgba(0, 0, 0, 0.5);
				margin: 0;
			}

			.login__form {
				width: 100%;
				max-width: 450px;
				margin-top: 40px;
				background-color: #fff;
			}
		</style>
	</head>

	<body>
		<div
			class="bg-dark h-100 w-100 position-absolute top-0 bottom-0 end-0 start-0"
		>
			<h1 class="text-white text-center mt-5">Admin Panel</h1>
			<form
				
				class="login__form mx-auto p-4 shadow-lg rounded-3 js-form"
			>
				<!-- Email input -->
				<div class="form-outline mb-4">
					<input
						type="text"
						id="form1Example1"
						class="form-control js-email"
						placeholder="Username"
					/>
				</div>

				<!-- Password input -->
				<div class="form-outline mb-4">
					<input
						type="password"
						id="form1Example2 js-password"
						class="form-control js-password"
						placeholder="Password"
					/>
				</div>

				<!-- 2 column grid layout for inline styling -->
				<div class="row mb-4">
					<div class="col d-flex justify-content-center">
						<!-- Checkbox -->
						<div class="form-check">
							<input
								class="form-check-input"
								type="checkbox"
								value=""
								id="form1Example3"
								checked
							/>
							<label class="form-check-label" for="form1Example3">
								Eslab qolish
							</label>
						</div>
					</div>

					<div class="col">
						<!-- Simple link -->
						<a href="#!">Parolni unutdingizmi?</a>
					</div>
				</div>

				<!-- Submit button -->
				<button type="submit" class="btn btn-primary btn-block">Kirish</button>
			</form>
			<div class="text-center mt-4">
				<h4 class="text-white m-0">Namuna:</h4>
				<div class="d-flex justify-content-center">
					<p class="text-white">Username: <span class="text-warning">admin</span></p>
					<p class="text-white ms-4">
						Password: <span class="text-warning">root</span>
					</p>
				</div>
			</div>
		</div>

		<script
			type="text/javascript"
			src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"
		></script>

		<script>
			let elForm = document.querySelector('.js-form');
			let elName = document.querySelector('.js-email');
			let elPassword = document.querySelector('.js-password');

			function postLogin() {}

			elForm.addEventListener('submit', async (e) => {
				e.preventDefault();

				await fetch('http://localhost:3000/login', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json',
					},
					body: JSON.stringify({
						username: elName.value,
						password: elPassword.value,
					}),
				})
					.then((res) => res.json())
					.then((data) => {
						if (data.status === 200) {
							localStorage.setItem('token', data.token);
							console.log(data);
						}
					})
					.catch((err) => console.log(err));
			});
		</script>
	</body>
</html>
